<style lang="less">
  @import "../style/app.wxss";
  .checkItemCellLeft {
    width: 40%;
    text-align: left;
  }

  .checkItemCellRight {
    width: 60%;
    text-align: right;
  }

  .hasZlkImage {
    color: blue
  }

  .noZlkImage {
    
  }

  /** 未验货的css  */
  .checkItemCell {
    width: 33%;
  }

  .checkItemCellLeft_notcheck {
    width: 60%;
    text-align: left;
  }

  .checkItemCellRight_notcheck {
    width: 40%;
