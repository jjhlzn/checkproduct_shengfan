  }

  /** 已验货的css */
  .checkItemCell_hascheck {
  width: 33%;
}
checkItemCellRight2 {
  width: 40%;
  text-align: right;
}
.checkItemCellCenter_hascheck {
  width: 23%;
  text-align: right;
}


.checkItemCellLeft_hascheck {
  width: 54%;
   text-align: left;
}

.checkItemCellRight_hascheck {
  width: 23%;
   text-align: right;
}

.loadAllCell_hascheck {
  margin-top: 10px;
  height: 10px;
